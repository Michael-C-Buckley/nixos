syntax on
filetype on
filetype plugin on
filetype indent on

colorscheme slate

set number
set relativenumber
set backspace=indent,eol,start
set nocompatible

set cursorline
set cursorcolumn

set autoindent
set smartindent
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

set hlsearch
set incsearch

set ignorecase
set smartcase

set ruler
set showcmd

set mouse=a

set undofile
set undodir=~/.vim/undodir

" Enable auto completion menu after pressing TAB.
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
